{
    "env": {
        "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": [
          "warn"
        ],
        "dot-notation": [
          "error"
        ],
        "eqeqeq": [
          "error"
        ],
        "no-alert": [
          "error"
        ],
        "no-implicit-globals": [
          "error"
        ]
    }
}
